<Page
    x:Class="SSCG.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SSCG"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="txtCN" Margin="10,55,10,0" TextWrapping="Wrap" PlaceholderText="eg. localhost or My Company" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="txtO" Margin="10,154,10,0" TextWrapping="Wrap" PlaceholderText="eg. My Company Inc." VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="txtOU" Margin="10,253,10,0" TextWrapping="Wrap" PlaceholderText="eg. IT or App Publishing" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="txtL"  Margin="10,352,10,0" TextWrapping="Wrap" PlaceholderText="eg. Los Angeles" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="txtS" Margin="10,451,10,0" TextWrapping="Wrap" PlaceholderText="eg. California" VerticalAlignment="Top" FontSize="22"/>
        <HyperlinkButton x:Name="GoToCountryCodesLink" Content="Don't know your country code?" Margin="97,518,0,0" VerticalAlignment="Top" FontSize="15" NavigateUri="https://github.com/korayustundag/Self-Signed-Certificate-Generator/blob/main/Shared/Country-ISO-Codes.md"/>
        <TextBox x:Name="txtC" Margin="10,550,10,0" TextWrapping="Wrap" PlaceholderText="eg. US" VerticalAlignment="Top" FontSize="22" MaxLength="2"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,21,0,0" TextWrapping="Wrap" Text="Common Name:" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,120,0,0" TextWrapping="Wrap" Text="Organization:" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,219,0,0" TextWrapping="Wrap" Text="Organizational Unit:" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,318,0,0" TextWrapping="Wrap" Text="Locality:" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,417,0,0" TextWrapping="Wrap" Text="State:" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,516,0,0" TextWrapping="Wrap" Text="Country:" VerticalAlignment="Top" FontSize="22"/>
        <RadioButton x:Name="isSSL" Content="SSL" ToolTipService.ToolTip="Crt and Key files are export as Zip archive" Margin="10,612,0,0" VerticalAlignment="Top" FontSize="18" IsChecked="True"/>
        <RadioButton x:Name="isCode" Content="Code Sing" ToolTipService.ToolTip="Certificate is export in pfx format" Margin="10,657,0,0" VerticalAlignment="Top" FontSize="18"/>
        <ComboBox x:Name="yearSelect" ItemsSource="{x:Bind Years}" Margin="0,0,192,15" HorizontalAlignment="Right" Width="199" VerticalAlignment="Bottom" Height="32"/>
        <Button x:Name="btnCreate"  Content="Create" Margin="0,0,10,10" VerticalAlignment="Bottom" FontSize="22" HorizontalAlignment="Right" Width="156" Height="43" Click="btnCreate_Click"/>
        <TextBlock Margin="0,0,382,18" TextWrapping="Wrap" Text="Year(s):" FontSize="22" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="82"/>

    </Grid>
</Page>
